{
  "exclude": ["node_modules"],
  "compilerOptions": {
    "strictNullChecks": true,
    "noEmit": true,
    "allowJs": true,
    "checkJs": true,
    "moduleResolution": "node",
    "target": "es2020",
    "module": "es2020",
    "lib": ["ES2020", "dom"],
    "suppressImplicitAnyIndexErrors": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "sourceMap": false,
    "declaration": false,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "isomorphic-git": ["./dist/index.d.ts"],
      "isomorphic-git/internal-apis": ["./src/internal-apis.d.ts"]
    }
  }
}